{
  "name": "photo-gallery",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm --workspace backend run dev",
    "dev:client": "npm --workspace frontend start",
    "build": "npm --workspace frontend run build",
    "start": "npm --workspace backend start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}